<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newA"
    android:shape="rectangle"
    android:orientation="vertical">


<!--    <TimePicker-->
<!--        android:id="@+id/time"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="216dp"-->
<!--        android:timePickerMode="spinner"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->
    <Button
        android:id="@+id/alarm_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="music"
        android:hint="НАСТРОИТЬ ВРЕМЯ"
        android:textColorHint="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="МЕЛОДИЯ"
        app:iconTint="#E8D6D6"
        android:onClick="music"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>


    <Switch
        android:id="@+id/vibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="ВИБРАЦИЯ"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        />

    <Switch
        android:id="@+id/moreLoud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="УСИЛЕНИЕ ЗВУКА"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ГРОМКОСТЬ"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp" />

    <SeekBar
        android:id="@+id/volumeControl"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:text="ИНТЕРВАЛ ПОВТОРОВ" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:max="9"
        android:min="1" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:hint="ПРИМЕЧАНИЕ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="0dp"
        android:text="+" />
    <Button
        android:id="@+id/backL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-50dp"
        android:backgroundTint="#681818"
        android:minHeight="48dp"
        android:onClick="back"
        android:text="НАЗАД"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>